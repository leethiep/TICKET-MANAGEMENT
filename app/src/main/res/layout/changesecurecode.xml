<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã bảo mật cũ"
        android:id="@+id/ed_changesecurecode_oldpass"
        android:inputType="textPassword"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã bảo mật mới"
        android:id="@+id/ed_changesecurecode_newpass"
        android:layout_below="@id/ed_changesecurecode_oldpass"
        android:inputType="textPassword"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Xác nhận mã bảo mật mới"
        android:id="@+id/ed_changesecurecode_confirmnewpass"
        android:layout_below="@id/ed_changesecurecode_newpass"
        android:inputType="textPassword"/>
</RelativeLayout>