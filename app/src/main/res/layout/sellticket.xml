<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swiperefreshsell"
    android:layout_width="match_parent"
    android:background="#ccc"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title_sell"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"

            android:textSize="20dp"
            android:background="#0A2359"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/txt_title_select_flights"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_sell"
            android:layout_marginTop="15dp"
            android:text="Chuyến bay:"
            android:textColor="#0A2359" />

        <Spinner
            android:id="@+id/spin_sellticket_select_flights"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_sell"
            android:layout_toRightOf="@id/txt_title_select_flights"
            android:textColor="#000" />

        <TextView
            android:id="@+id/txt_name_bookhelp"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/spin_sellticket_select_flights"
            android:layout_marginTop="15dp"
            android:text="Tên người đặt:"
            android:textColor="#0A2359" />

        <EditText
            android:id="@+id/ed_name_book"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/spin_sellticket_select_flights"
            android:layout_toRightOf="@id/txt_name_bookhelp"
            android:hint="Tên "
            android:textColorHint="#0A2359" />

        <TextView
            android:id="@+id/txt_sdt_book"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_name_bookhelp"
            android:layout_marginTop="15dp"
            android:text="SDT người đặt:"
            android:textColor="#0A2359" />

        <EditText
            android:id="@+id/ed_sdt_book"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_name_bookhelp"
            android:layout_toRightOf="@id/txt_name_bookhelp"
            android:hint="Số điện thoại: "
            android:inputType="number"
            android:textColorHint="#0A2359" />

        <CheckBox
            android:id="@+id/check_isHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_sdt_book"
            android:text="Đặt hộ"
            android:buttonTint="#0A2359"
            android:textColor="#0A2359" />

        <TextView
            android:id="@+id/txt_name_guests"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/check_isHelp"
            android:layout_marginTop="15dp"
            android:text="Tên hành khách:"
            android:textColor="#0A2359"/>

        <EditText
            android:id="@+id/ed_name_guests"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/check_isHelp"
            android:layout_toRightOf="@id/txt_name_guests"
            android:hint="Tên "
            android:textColor="#0A2359"
            android:textColorHint="#0A2359" />

        <TextView
            android:id="@+id/txt_id_guests"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ed_name_guests"
            android:layout_marginTop="15dp"
            android:text="Số CMND:"
            android:textColor="#0A2359" />

        <EditText
            android:id="@+id/ed_id_guests"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ed_name_guests"
            android:layout_toRightOf="@id/txt_id_guests"
            android:hint="Số CMND "
            android:inputType="number"
            android:textColor="#0A2359"
            android:textColorHint="#0A2359" />

        <TextView
            android:id="@+id/txt_phone_guests"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ed_id_guests"

            android:layout_marginTop="15dp"
            android:text="Số điện thoại:"
            android:textColor="#0A2359" />

        <EditText
            android:id="@+id/ed_phone_guests"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ed_id_guests"
            android:layout_toRightOf="@id/txt_phone_guests"
            android:hint="Số điện thoại "
            android:inputType="number"
            android:textColor="#0A2359"
            android:textColorHint="#0A2359" />

        <TextView
            android:id="@+id/txt_select_ticketlevels"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ed_phone_guests"
            android:layout_marginTop="15dp"
            android:text="Hạng vé:"
            android:textColor="#0A2359" />

        <Spinner
            android:id="@+id/spin_sellticket_selectticketlevels"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ed_phone_guests"
            android:layout_toRightOf="@id/txt_select_ticketlevels"
            android:textColor="#0A2359" />

        <EditText
            android:id="@+id/ed_money_guests"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ed_phone_guests"
            android:layout_toRightOf="@id/spin_sellticket_selectticketlevels"
            android:editable="false"
            android:hint="Giá tiền: "
            android:textColor="#0A2359"
            android:textColorHint="#0A2359"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_selltickets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ed_money_guests"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#0A2359"
            android:text="Bán"
            android:textColor="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_selltickets"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="#0A2359" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_below="@id/spin_sellticket_select_flights"
            android:layout_alignParentRight="true"
            android:background="@drawable/nameicon" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_below="@id/ed_name_book"
            android:layout_alignParentRight="true"
            android:background="@drawable/phoneicon" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_below="@id/check_isHelp"
            android:layout_alignParentRight="true"
            android:background="@drawable/nameicon" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_below="@id/ed_name_guests"
            android:layout_alignParentRight="true"
            android:background="@drawable/idicon1" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_below="@id/ed_id_guests"
            android:layout_alignParentRight="true"
            android:background="@drawable/phoneicon" />
    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>