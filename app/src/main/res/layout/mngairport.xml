<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#0A2359"
        android:id="@+id/btn_mng_addairport"
        android:text="Thêm sân bay"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#0A2359"
        android:id="@+id/btn_mng_deleteairport"
        android:text="Xóa sân bay"
        android:layout_below="@+id/btn_mng_addairport"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_mng_updateairport"
        android:backgroundTint="#0A2359"
        android:text="Cập nhật sân bay"
        android:layout_below="@+id/btn_mng_deleteairport"/>
</RelativeLayout>