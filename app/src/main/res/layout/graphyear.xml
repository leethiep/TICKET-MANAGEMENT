<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/ed_graphyear_year"
        android:hint="Năm"
        android:inputType="number"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ed_graphyear_year"
        android:id="@+id/btn_year_start_plot"
        android:backgroundTint="#0A2359"
        android:text="Xuất"/>
    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ed_graphyear_year"
        android:id="@+id/graph_year"/>
</RelativeLayout>